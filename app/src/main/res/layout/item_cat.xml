<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Persian Cat" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Origin: Iran" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Length: very" />

            <TextView
                android:id="@+id/healthRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Health Rate: 4" />

            <TextView
                android:id="@+id/playfulnessRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Playfulness Rate: 5" />

            <TextView
                android:id="@+id/intelligenceRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Intelligence Rate: 4" />

            <TextView
                android:id="@+id/familyFriendlyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Family Friendly Rate: 4" />

        </LinearLayout>

        <!-- Cat Image -->
        <ImageView
            android:id="@+id/catImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
